{
  "name": "prod",
  "displayName": "Production",
  "instanceUrl": "https://mycompany.my.salesforce.com",
  "username": "devops@mycompany.com",
  "deployOnPush": false,
  "runApexTests": true,
  "apexTestLevel": "RunLocalTests",
  "minCoveragePercent": 85,
  "runProvarTests": true,
  "provarTestSuite": "SmokeTestSuite",
  "s3ArtifactBucket": "sf-devops-artifacts",
  "s3ArtifactPath": "prod",
  "requireApproval": true,
  "approvers": [
    "release-manager@mycompany.com",
    "sf-admin@mycompany.com"
  ],
  "deploymentWindow": {
    "allowedDays": ["Saturday", "Sunday"],
    "allowedHours": {
      "start": "06:00",
      "end": "10:00"
    },
    "timezone": "Europe/London"
  },
  "notifications": {
    "slack": {
      "channel": "#sf-prod-deployments",
      "onSuccess": true,
      "onFailure": true
    },
    "email": {
      "recipients": ["sf-team@mycompany.com"],
      "onSuccess": true,
      "onFailure": true
    }
  }
}
